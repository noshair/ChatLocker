<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatLocker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/bg_drk</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/app_color</item>
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->
    </style>
    <style name="Transparent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="EmptyTheme">
    </style>
    <style name="ErrorText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="TextInputLayoutAppearance">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="colorControlActivated">@color/blue_800</item>
        <item name="colorControlHighlight">@color/whatsapp_green</item>
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="hintTextColor">@color/blue_800</item>
    </style>

    <style name="HintText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.0312</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    <style name="MyLockScreenStyle">
        <item name="android:background">@color/purple_500</item>
    </style>
    <style name="WhatsappLock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/app_color</item>
        <item name="colorOnSecondary">@color/app_color</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="fontFamily">@font/heebo_regular</item>

    </style>

    <style name="HeaderTitle">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>

    </style>

    <style name="BackButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">14dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:contentDescription">@string/image</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="srcCompat">@drawable/ic_arrow_back_black_24</item>
        <item name="tint">@color/header_icon_tint_color</item>
    </style>
</resources>